<div align= "center">
        <h1>Areas</h1>

        <table class="row-border" frame="void" rules="rows" cellspacing="10">
            <tr>
                <th colspan=5>Location</th>
            </tr>

            <% @areas.each do |area| %>
                <tr>
                    <td>
                        <%= area.location %> | <%= area.latitude %> | <%= area.longtitude %>
                    </td>
                    
                    <td><%= link_to edit_area_path([:id]), class: "btn btn-default" do %>
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <% end %>
                    </td>
                    
                    <td><%= link_to area_path(area[:id]), class: "btn btn-default", method: :delete, data: {confirm: 'Are you sure'} do %>
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        <% end %>
                    </td>    
                    
                </tr>
            <% end %>
            
        </table>
          
        

        <%= link_to 'Create', new_area_path , class: "btn btn-lg btn-primary" %> 
    
</div>